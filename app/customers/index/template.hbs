
<div class="container table-responsive col-lg-offset-2 col-lg-8">
  <div clsss="row">
    <br>
    <h1>Customers</h1>
    <br>

    <br>

    {{outlet}}

    <table class="table">
      <thead>
        <th>id</th>
        <th>name</th>
        <th>email</th>
        <th>Action</th>
      </thead>
      <tbody>
        {{#each model as |customer|}}
          <tr>
            <td>{{customer.id}}</td>
            <td>{{customer.name}}</td>
            <td>{{customer.email}}</td>
            <td>
              {{#link-to 'customers.customer.premises' customer class="btn"}}
                View premises
              {{/link-to}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
